{
  "name": "node-typescript-express-boilerplate",
  "version": "1.0.20",
  "description": "Lightweight boilerplate for Express Apps with typescript",
  "main": "src/app.ts",
  "bin": {
    "node-typescript-express-boilerplate": "bin/cli.mjs"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dilawari2008/node-typescript-express-boilerplate"
  },
  "scripts": {
    "build": "rimraf dist && tsc && tsc-alias -v",
    "start": "yarn nodemon src/app.ts --legacy-watch",
    "direct": "ts-node src/app.ts",
    "lint": "eslint --ignore-path .gitignore --ext .ts,.js ./",
    "lint:fix": "yarn lint -- --fix"
  },
  "ts-node": {
    "files": true
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-winston": "^4.2.0",
    "helmet": "^8.0.0",
    "http-errors": "^2.0.0",
    "http-status-codes": "^2.3.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.5.2",
    "nanoid": "^3.3.4",
    "tslib": "^2.6.3",
    "winston": "^3.15.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/cookie-parser": "^1.4.7",
    "@types/cors": "^2.8.14",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.6",
    "nodemon": "^3.1.4",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.5.4"
  }
}
